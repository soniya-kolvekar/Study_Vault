rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated and has correct domain
    function isAuthenticated() {
      return request.auth != null && request.auth.token.email.matches('.*@sahyadri[.]edu[.]in');
    }

    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    match /resources/{resourceId} {
      // Allow anyone with a valid email to read and create resources
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      
      // For now, allow any authenticated user to act as admin (approve/reject/delete)
      // TODO: PROD - Restrict this to specific admin UIDs or emails
      allow update, delete: if isAuthenticated();
    }
  }
}
